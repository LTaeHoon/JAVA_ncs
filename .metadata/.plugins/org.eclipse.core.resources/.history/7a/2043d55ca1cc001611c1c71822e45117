package sec02_util;

import java.util.Random;

public class Step01_random {
	/*
	 * util 관련 패키지 소속 클래스
	 *  1. Random 클래스
	 *  2. Properties 클래스
	 *  3. Locale 클래스
	 */
	public static void main(String[] args) {
		// 1. Random 클래스
		// - 임의의 난수를 발생하는 객체 생성
		
		int []lotto = new int[6];
		int tmp;
		Random r = new Random(); //0< r <1
		// 1 ~ 45 까지 난수 정수를 생성
		for(int i=0;i<lotto.length;i++){
			tmp = r.nextInt(45)+1;
			lotto[i]=tmp;
		}
		for(int num:rotto)
			System.out.print(num + " ");
	}

}
