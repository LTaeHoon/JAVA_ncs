package sec02_Class;
/*
 * 문)학생클래스(Student)를 다음 조건에 맞게 정의하시오.
 *  	조건1) 멤버변수 : name(String), age(int), major(String)
 *  	조건2) 멤버변수 초기화 : 임의 지정
 *  	조건3) 멤버메서드 : 메서드명(display), 용도 : 멤버변수 출력
 */
class Student{
	String name = "홍길동";
	int age =35;
	String major = "정보통신";
	
	void display(){
		System.out.printf("이름 : %s , 나이 : %d , 학과 : %s \n",name,age,major);
	}
}

