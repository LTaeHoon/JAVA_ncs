package sec04_String;

public class Step03_stringBuffer {
	/*
	 * StringBuffer 클래스
	 *  - String 연산과정에서 임시기억장소(Buffer)를 이용하여
	 *    연산을 수행하는 객체 생성 클래스
	 *    -> 기존 객체를 대상으로 연산 가능
	 *    -> 버퍼크기 : 16지 문자 저장 
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		StringBuffer sb = new StringBuffer("java");
		
		// 1. 문자열 추가 연산
		sb.append(" program"); // sb = "java program"
		System.out.println("sb = "+sb); //sb =java program
		
		// 2. 문자열 교체 연산
		sb.replace(0, 4, "python");
		System.out.println("sb = "+sb); //python program

		// 3. 부분문자열 추출 연산
		String str = sb.substring(7,14);
		System.out.println("str = " + str);
	}

}
