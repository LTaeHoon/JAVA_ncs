package chap07_classII;
class Employee{
	private String name;
	int pay;
	
	Employee(String name){
		this.name = name;
	}
	String getName(){
		return this.name;
	}
}
class Permanent extends Employee{
	int pPay;
	int bonus;
	
	Permanent(String name, int pPay,int bonus){
		super(name);
		this.pPay = pPay;
		this.bonus = bonus;
	}
	void getPay(){
		pay = pPay + bonus;
		System.out.printf("급여 : %,3d\n",pay);
	}
}
class Temporary extends Employee{
	
}
